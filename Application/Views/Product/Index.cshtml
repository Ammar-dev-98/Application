@model IEnumerable<Application.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4 pb-4">
        <div class="col-6">
            <h2 class="text-primary">Products</h2>
        </div>
        <div class="col-6 text-right" >
            <a class="btn btn-success" asp-controller="Product" asp-action="Create" style="width:38%">Add Product</a>
        </div>
    </div>

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Order ID</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {

                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.ProductId</td>
                        <td>@obj.ProductName</td>
                        <td>@obj.OrderId</td>
                        <td>@obj.Quantity</td>
                        <td>
                            <button class="btn btn-outline-success" style="width: 100%">@Html.ActionLink("Edit", "Edit", "Product", new { productId = obj.ProductId }, new { @class = "btn" }) </button>
                        </td>
                        <td>
                            <button class="btn btn-outline-danger" style="width: 100%">@Html.ActionLink("Delete", "Delete", "Product", new { productId = obj.ProductId }, new { @class = "btn" }) </button>
                        </td>
                    </tr>
                }
           
            }
            else
            {
                <tr>
                    <td>No Products Exist</td>
                </tr>
        }
        </table>

    </div>

